    <title>Đăng nhập</title>
  </head>
  <body>
    <div class="container">
      <header class="header">
        <a href="/login">
          <img src="/img/logo.png" alt="Logo" class="header__logo" />
        </a>
      </header>
      <div id="wrapper">
        <div id="form-login">
          <h1 class="form-heading">Đăng nhập</h1>
          <form method="POST" action="/login">
            <div class="form-group">
              <i class="far fa-user"></i>
              <input
                type="text"
                id="username"
                name="username"
                class="form-input"
                placeholder="Tên đăng nhập"
              />
            </div>
            <div class="form-group">
              <i class="fas fa-key"></i>
              <input
                type="password"
                id="password"
                name="password"
                class="form-input"
                placeholder="Mật khẩu"
              />
            </div>
            <% if(error.length > 2){ %>
            <div
              style="
                background-color: #f2dede;
                color: #a94442;
                padding: 10px;
                border: 1px solid #ebccd1;
              "
            >
              <strong><%= error %></strong>
            </div>
            <%} %>
            <button type="submit" class="form-submit">Đăng nhập</button>
          </form>
          <a href="/register" style="font-size: 1.4rem">Đăng kí</a>
        </div>
      </div>
