    <style>
      .content {
        width: 1000px;
        grid-column: 1/3;
        margin: 0 auto;
      }

      .content_title {
        display: flex;
        justify-content: flex-start;
        align-items: center;
        /* margin-top: 20px; */
      }

      .content_title h4 {
        font-size: 32px;
        padding: 0 30px;
        cursor: default;
      }

      .content_title i {
        font-size: 20px;
        cursor: pointer;
      }

      .content_sub-title {
        font-size: 20px;
        font-weight: 400;
        margin: 20px 0;
      }

      .content_contact-info-control {
        display: flex;
        justify-content: space-between;
        padding: 10px 0;
      }

      .content_contact-info-input {
        display: flex;
        flex-direction: column;
      }

      .content_contact-info-input label {
        font-size: 14px;
        font-weight: 300;
        padding: 10px 0;
      }

      .content_contact-info-input input {
        height: 60px;
        width: 486px;
        font-size: 22px;
        /* color: #fff; */
        background-color: var(--color2);
        /* outline: none; */
        /* border: none; */
        padding: 10px 20px;
        border-radius: 16px;
      }

      .content_table-wrapper {
        border: 1px solid #000;
        padding: 30px;
        border-radius: 30px;
      }

      .content_product-table {
        max-height: 500px;
        overflow-y: auto;
      }

      .content_product-table table {
        width: 95%;
      }

      .content_product-table th {
        position: sticky;
        top: 0;
        font-size: 24px;
        font-weight: 300;
        text-align: center;
        padding: 5px 0;
        background-color: #fff;
      }

      .content_product-table td {
        padding: 30px 0;
        font-size: 18px;
      }

      .content_product-table tr:hover {
        background-color: rgba(0, 0, 0, 0.05);
      }

      /* Scroll bar */

      .content_product-table::-webkit-scrollbar {
        width: 4px;
      }

      .content_product-table::-webkit-scrollbar-track {
        background: #f1f1f1;
      }

      .content_product-table::-webkit-scrollbar-thumb {
        background: #888;
      }

      .content_product-table::-webkit-scrollbar-thumb:hover {
        background: #555;
      }

      .content_payment-options {
        display: flex;
        align-items: center;
      }

      .content_payment-options-btn {
        padding: 6px 24px;
        border: 2px solid #000;
        font-size: 20px;
        margin: 0 14px;
        cursor: pointer;
      }

      .content_payment-options-btn_active {
        color: var(--color2);
        border: 2px solid var(--color2);
      }

      .content_payment-voucher {
        padding: 20px 0;
        display: flex;
      }

      .content_payment-voucher-btn {
        padding: 0 10px;
        color: var(--color2);
        font-size: 20px;
        cursor: pointer;
      }

      .content_payment {
        margin: 60px 0;
        border-bottom: 1px solid #000;
      }

      .content_bill {
        display: flex;
        flex-direction: column;
        align-items: flex-end;
      }

      .content_bill-detail,
      .content_bill-total {
        display: flex;
        padding: 10px 0;
      }

      .content_bill-detail-title,
      .content_bill-detail-value,
      .content_bill-total-title,
      .content_bill-total-value {
        font-size: 20px;
        min-width: 240px;
      }

      .content_bill-detail-value,
      .content_bill-total-value {
        text-align: right;
      }

      .content_bill-total-title {
        font-weight: 600;
      }

      .content_bill-total-value {
        font-size: 36px;
        color: var(--color2);
      }

      .content_bill {
        padding-bottom: 20px;
      }

      .content_bill-order-btn {
        font-size: 24px;
        color: #fff;
        background-color: var(--color2);
        padding: 6px 40px;
        margin: 20px 0;
        cursor: pointer;
      }

      .content_payment-card {
        display: flex;
        flex-direction: column;
        display: none;
      }

      .content_payment-card-bank,
      .content_payment-card-number {
        display: flex;
        margin-top: 20px;
      }

      .content_payment-card-bank span,
      .content_payment-card-number span {
        font-size: 20px;
        min-width: 214px;
      }

      .content_payment-card-bank select,
      .content_payment-card-number input {
        min-width: 470px;
        font-size: 20px;
        padding: 6px 10px;
      }

      .content_payment-card-number input::-webkit-outer-spin-button,
      .content_payment-card-number input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
      }

      .voucher_modal {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgb(0, 0, 0, 0.4);
        display: none;
      }

      .voucher_modal-body {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: #fff;
        padding: 20px;
        width: 700px;
        /* height: 774px; */
      }

      .voucher_modal-body h5 {
        font-size: 24px;
        font-weight: 400;
      }

      .voucher_modal-body-control {
        display: flex;
        background-color: #d9d9d9;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
        margin: 0px 0;
        font-size: 20px;
      }

      .voucher_modal-body-control_btn {
        background-color: var(--color2);
        color: #fff;
        padding: 6px 10px;
        cursor: pointer;
      }

      .voucher_modal-body-control input {
        flex: 1;
        margin: 0 30px;
        padding: 10px;
      }

      .voucher_modal-body_list-wrapper {
        max-height: 500px;
        overflow-y: scroll;
        border-bottom: 1px solid #000;
        border-top: 1px solid #000;

        margin: 40px 0;
      }

      .voucher_modal-body_item {
        display: flex;
        align-items: center;
        border: 3px solid #000;
        box-shadow: 0px 0px 4px 1px #000;
        margin: 20px 0;
        cursor: pointer;
      }

      .voucher_modal-body_item-tag,
      .voucher_modal-body_item-checkbox {
        padding: 40px 50px;
        font-size: 36px;
      }

      .voucher_modal-body_item-tag {
        border-right: 3px solid #000;
      }

      .voucher_modal-body_item-checkbox {
        cursor: pointer;
      }

      .voucher_modal-body_item-info {
        flex: 1;
        font-size: 24px;
        padding-left: 20px;
      }

      .voucher_modal-body_item-expire {
        font-size: 20px;
        color: #999;
      }

      .voucher_modal-body_item.voucher_modal-body_item_check {
        border: 3px solid var(--color2);
      }

      .voucher_modal-body_item.voucher_modal-body_item_check
        .voucher_modal-body_item-tag {
        border-right: 3px solid var(--color2);
      }

      .voucher_modal-body_item.voucher_modal-body_item_check
        .voucher_modal-body_item-checkbox
        i {
        color: var(--color2);
      }

      .voucher_modal-body_list-wrapper::-webkit-scrollbar {
        width: 4px;
      }

      .voucher_modal-body_list-wrapper::-webkit-scrollbar-track {
        background: #f1f1f1;
      }

      .voucher_modal-body_list-wrapper::-webkit-scrollbar-thumb {
        background: #888;
      }

      .voucher_modal-body_list-wrapper::-webkit-scrollbar-thumb:hover {
        background: #555;
      }

      .voucher_modal-body-buttons {
        display: flex;
        justify-content: flex-end;
      }

      .voucher_modal-body-buttons_back,
      .voucher_modal-body-buttons_ok {
        width: 200px;
        height: 50px;
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 16px;
        cursor: pointer;
      }

      .voucher_modal-body-buttons_back {
        border: 1px solid #000;
        margin-right: 20px;
      }

      .voucher_modal-body-buttons_ok {
        background-color: #059669;
        color: #fff;
      }
    </style>
